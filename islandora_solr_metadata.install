/**
 * Implements hook_uninstall().
 */
function islandora_solr_metadata_uninstall() {
  $variables = array(
    'islandora_solr_metadata_omit_empty_values',
    'islandora_solr_metadata_dedup_values',
  );
  array_walk($variables, 'variable_del');
}

